<div class="container">
  <h1><%= @task.title %></h1>
  <h3><%= @task.details %></h3>


  <% if @task.completed  %>
      <input type="checkbox" name="task" checked> This task is completed <br>
    <% else %>
      <input type="checkbox" name="task"> This task is not done yet <br>
  <% end %>
  <br>

  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary"%>
<br><br>
<%= link_to "Delete this task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-warning"  %>
<br><br>

<%= link_to "Back to task list", tasks_path %>
</div>

